local NotificationLibrary = {}

function NotificationLibrary:Show(message, duration)
	local ScreenGui = Instance.new("ScreenGui")
	local TextLabel = Instance.new("TextLabel")

	ScreenGui.Name = "NotificationGui"
	ScreenGui.ResetOnSpawn = false
	ScreenGui.IgnoreGuiInset = true
	ScreenGui.Parent = game:GetService("CoreGui")

	TextLabel.Parent = ScreenGui
	TextLabel.AnchorPoint = Vector2.new(0.5, 0.5)
	TextLabel.Position = UDim2.new(0.5, 0, 0.4, 0)
	TextLabel.Size = UDim2.new(0, 400, 0, 100)
	TextLabel.BackgroundTransparency = 1
	TextLabel.TextColor3 = Color3.new(1, 1, 1)
	TextLabel.TextScaled = true
	TextLabel.Font = Enum.Font.GothamBold
	TextLabel.Text = ""

	-- Hiệu ứng hiện từng chữ
	for i = 1, #message do
		TextLabel.Text = string.sub(message, 1, i)
		task.wait(0.05)
	end

	task.wait(duration or 3)

	-- Hiệu ứng biến mất
	for i = #message, 1, -1 do
		TextLabel.Text = string.sub(message, 1, i - 1)
		task.wait(0.05)
	end

	ScreenGui:Destroy()
end

return NotificationLibrary
